<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Controller.ViewModels"
             xmlns:views="clr-namespace:Controller.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Controller.Views.MainView"
             x:DataType="vm:MainViewModel"
             Focusable="True"
             Background="#181818"
             KeyDown="User_KeyDown"
             KeyUp="User_KeyUp"
             FocusAdorner="{x:Null}">
    <UserControl.Styles>
        <Style Selector="TextBlock.tag">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="TextAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="2*,2*,3*"
          ColumnDefinitions="4*,3*,4*">
        <!-- 网页嵌入(Wifi图传) -->
        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="1"
              x:Name="Browser" />
        <!-- 设备连接选项 -->
        <Grid Grid.Row="2"
              Grid.Column="1"
              RowDefinitions="1*,1*,3*,1*,3*,1*,3*,3*">
            <TextBlock Grid.Row="1" Text="Tank -> IP" Classes="tag" />
            <TextBox Grid.Row="2" Text="{Binding Tank.EspIp}" Watermark="Enter the IP of Tank" />
            <TextBlock Grid.Row="3" Text="Tank -> Port" Classes="tag" />
            <TextBox Grid.Row="4" Text="{Binding Tank.EspPort}" Watermark="Enter the Port of Tank" />
            <TextBlock Grid.Row="5" Text="Camera -> IP" Classes="tag" />
            <TextBox Grid.Row="6" Text="{Binding Tank.CameIp}" Watermark="Enter the IP of Came" />
        </Grid>
        <views:ArcGauge x:Name="LeftArcGauge"
                        Grid.Row="2"
                        Grid.Column="0"
                        MinValue="-1"
                        MaxValue="1"
                        Background="Transparent"
                        Value="{Binding Tank.LeftTrack}" />
        <views:ArcGauge x:Name="RightArcGauge"
                        Grid.Row="2"
                        Grid.Column="2"
                        MinValue="-1"
                        MaxValue="1"
                        Background="Transparent"
                        Value="{Binding Tank.RightTrack}" />
    </Grid>
</UserControl>